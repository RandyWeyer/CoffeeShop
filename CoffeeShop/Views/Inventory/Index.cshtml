@{
  Layout = "_Layout";
}
<head>
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>
<h1>Our current inventory:</h1>
<hr />

@if (Model.Count != 0)
{
  <ol>
    @foreach (var item in Model)
    {
      <li>@item.GetItem(), @item.GetItemAmount() Units
        ||<a href="/inventory/@item.GetId()/restock" class="restock" id="@item.GetId()">Restock</a>
        ||<a href="/inventory" class="deleteAction" id="@item.GetId()">Delete</a></li>
 }
 </ol>
}
 <form id="secret-form" action="/inventory/delete" method="post">
   <input type="hidden" name="itemId" value="">
 </form>

 <script type="text/javascript">
   $("#secret-form").hide();
   $(document).ready(function() {
     $("a.deleteAction").click(function(event) {
       event.preventDefault();
       $("form#secret-form input").val(this.id);
       $("form#secret-form").submit();
     })
   })
 </script>
